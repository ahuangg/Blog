<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/nav.ejs') %>

        <div class="blogs">
            <h2>All Blogs</h2>
            <% if(blogs.length > 0){ %> <% blogs.forEach(blog =>{%>
            <a href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="blog"><%= blog.snippet %></p>
            </a>
            <% }) %> <%}else{%>
            <p>No Blogs</p>
            <%}%>
        </div>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>
